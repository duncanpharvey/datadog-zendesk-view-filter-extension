{
  "name": "Zendesk View Extension 2.0",
  "description": "Hides Zendesk views",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://datadog.zendesk.com/agent/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://datadog.zendesk.com/agent/*"
      ],
      "run_at": "document_idle",
      "js": [
        "listenForViewUpdates.js",
        "syncViews.js",
        "syncViewState.js"
      ],
      "css": [
        "content.css"
      ]
    }
  ]
}